<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

	<select id="login_check" parameterType="map" resultType="sambro.vo.MemberVO">
		/* 로그인 체크 */
		SELECT
			*
		FROM
			location_member
		WHERE
			member_id = #{member_id}
			AND
			member_pwd = #{member_pwd}
	</select>

	<select id="member_id_check" parameterType="map" resultType="sambro.vo.MemberVO">
		/* 아이디 중복 체크 */
		SELECT
			*
		FROM
			location_member
		WHERE
			member_id = #{member_id};
	</select>
	
	<insert id="insert_member" parameterType="sambro.vo.MemberVO">
		/* 회원가입 */
		INSERT INTO
			location_member
			(
				 member_id
				, member_pwd
				, member_name
				, member_email
				, member_phone
			)
		VALUES
			(
				#{member_id}
				, #{member_pwd}
				, #{member_name}
				, #{member_email}
				, #{member_phone}
			)
	</insert>
	
</mapper>